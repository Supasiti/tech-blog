{{#each posts as |post|}}
  <div class="card mb-5 bg-fern text-bean border-round">
    <h4 class="card-header bg-bean text-secondary py-3 border-round">{{post.title}}</h4>
    <div class="card-body py-4">
      <p class="card-text">{{post.content}}</p>
    </div>
    <div class="card-footer bg-parsley text-fern border-round">
      {{post.createdAt}} --- by {{post.user.username}}
    </div>
  </div>
{{/each}}