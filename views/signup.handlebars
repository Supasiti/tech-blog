<div class="form-signin py-5">
  <form class="signup-form">
    <h1 class="h3 mb-3 fw-normal">Please sign up</h1>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="username-signup" placeholder="Jane">
      <label for="username-signup">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="email-signup" placeholder="name@example.com">
      <label for="email-signup">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password-signup" placeholder="Password">
      <label for="password-signup">Password</label>
    </div>
    
    <button class="mt-5 w-100 btn btn-lg bg-parsley text-fern" type="submit">Sign in</button>
  
  </form>

  <!-- <script src='/js/signup.js'></script> -->
</div>